<%- include("../template/cabecera") %>
<div class="container ">
    <h1 class="d-flex flex-row justify-content-center alig-items-center">Añadir acción</h1>
        <div class="d-flex flex-row justify-content-center alig-items-center">
            <form action="/accion" method="post">
                <div class="form-group p-2">
                    <label for="fechaRealizacion" class="text-success p-1 me-5">Fecha de realización:</label><br>
                    <input type="text" placeholder="Introduce fecha" class="form-class m-1" id="fechaRealizacion" name="fechaRealizacion" size="50%">
                </div>
                <div class="form-group p-2">
                    <label for="estado" class="text-success p-1">Estado:</label><br>
                    <input type="text" placeholder="Introduce estado" class="form-class m-1" id="estado" name="estado" size="50%"><br>
                    <small id="small-s"  class="form-text text-muted p-1">Los estados que hay que adjuntar son borrador, programada, realizada o anulada</small>

                </div>
                <div class="form-group p-2">
                    <label for="descripcion" class="text-success p-1">Descripción:</label><br>
                    <input type="text"  placeholder="Introduce descripcion" class="form-class m-1" id="descripcion" name="descripcion" size="50%">
                </div>
                <div class="form-group p-2" >
                    <label for="lugarRealizacion" class="text-success p-1">Lugar de realización:</label><br>
                    <input type="text" placeholder="Introduce precio" class="form-class m-1" id="lugarRealizacion" name="lugarRealizacion"  size="50%"><br>

                </div>
                
                <button type="submit" class="btn btn-danger m-2">Añadir</button>
            </form>
        </div>
    

</div>
    

<%- include("../template/footer") %>
