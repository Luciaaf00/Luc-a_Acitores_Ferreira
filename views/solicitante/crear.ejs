<%- include("../template/cabecera") %>
<div class="container ">
    <h1 class="d-flex flex-row justify-content-center alig-items-center">Añadir Solicitante</h1>
        <div class="d-flex flex-row justify-content-center alig-items-center">
            <form action="/solicitante" method="post">
                <div class="form-group p-2">
                    <label for="problemaMovilidad" class="text-success p-1 me-5">Problemas de mobilidad:</label><br>
                    <input type="text" placeholder="Introduce si/no" class="form-class m-1" id="problemaMovilidad" name="problemaMovilidad" size="50%">
                </div>
                <div class="form-group p-2">
                    <label for="enfermedad" class="text-success p-1">Enfermedad:</label><br>
                    <input type="text" placeholder="Introduce enfermedad" class="form-class m-1" id="enfermedad" name="enfermedad" size="50%"><br>

                </div>
                <div class="form-group p-2">
                    <label for="nombre" class="text-success p-1">Nombre:</label><br>
                    <input type="text"  placeholder="Introduce nombre" class="form-class m-1" id="nombre" name="nombre" size="50%">
                </div>
                <div class="form-group p-2" >
                    <label for="apellidos" class="text-success p-1">Apellidos:</label><br>
                    <input type="text" placeholder="Introduce apellidos" class="form-class m-1" id="apellidos" name="apellidos"  size="50%"><br>

                </div>
                <div class="form-group p-2" >
                    <label for="edad" class="text-success p-1">Edad:</label><br>
                    <input type="text" placeholder="Introduce edad" class="form-class m-1" id="edad" name="edad"  size="50%"><br>

                </div>
                <div class="form-group p-2" >
                    <label for="direccion" class="text-success p-1">Dirección:</label><br>
                    <input type="text" placeholder="Introduce dirección" class="form-class m-1" id="direccion" name="direccion"  size="50%"><br>

                </div>
                <div class="form-group p-2" >
                    <label for="descripcion" class="text-success p-1">Descripción:</label><br>
                    <input type="text" placeholder="Introduce descripción" class="form-class m-1" id="descripcion" name="descripcion"  size="50%"><br>

                </div>
                
                <button type="submit" class="btn btn-danger m-2">Añadir</button>
            </form>
        </div>
    

</div>
    

